<header class="flex space-between pd-lg valign">
    <div id="logo">
        <a href="/">Codeial</a>
    </div>

    <ul class="flex">
        <% if (locals.user) { %>
            <li>
                <a href="/users/profile">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
            <% } else {%>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
                <% } %>
    </ul>
</header>